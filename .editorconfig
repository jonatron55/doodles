root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.{json,md,xml,yml,yaml}]
indent_size = 2

[*.txt]
charset = utf-8
end_of_line = lf
indent_size = 1
indent_style = space
tab_width = 1
insert_final_newline = false
trim_trailing_whitespace = false
